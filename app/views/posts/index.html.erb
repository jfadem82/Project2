<section class="row side_padding">
<div class="col-md-12 products">
<h2>Coffee Addict Confessions</h2>
<h3><small>The Wolf's Head Coffee Co. Blog</small></h3>
<% if current_customer.present? %>
    <button class='btn btn-primary btn-small'><%= link_to 'New Post', new_customer_post_path %></button><br>or
<% end %>
  <p><button class='btn btn-primary btn-small'><%= link_to "Log in", login_path %></button> <br>to add a confession</p>
<img src="/blog.jpg">
<br><br>
<table class="table table-hover">
  	<thead>
    	<tr>
	      	<th>Name</th>
	      	<th>Post</th>
	      	<th colspan="3"></th>
    	</tr>
  	</thead>
  	<tbody>
    	<% @posts.each do |post| %>
      	<tr>
	       <td>
         <%= link_to post.customer.first_name, post.customer %>
         </td>
         <td>
         <%= link_to post.name, customer_post_path(post.customer,post) %>
         </td>
      	</tr>
      <% end %>
  	</tbody>
</table>
</div>
</section>

