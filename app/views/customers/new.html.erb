<h1>Create An Account</h1>

<%= form_for @customer do |f| %>
	<div>
	<%= f.label :first_name %>
	<%= f.text_field :first_name %>
	</div>

	<div>
	<%= f.label :last_name %>
	<%= f.text_field :last_name %>
	</div>

	<div>
	<%= f.label :gender %>
	<%= f.select :gender, options_for_select([["Select One", ""], "male", "female"]) %>
	</div>

	<div>
	<%= f.label :email %>
	<%= f.text_field :email %>
	</div>

	<div>
	<%= f.submit %>
	</div>

<% end %>