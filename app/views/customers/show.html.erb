<section class="row side_padding">
<div class="col-md-12 products">


<h2>Hello, <%= @customer.first_name %>! What would you like to do?</h2>

<br>

<button type="button" class="btn btn-primary btn-lg btn-block"><%= link_to 'Back', root_path %></button>

<br>

<% if current_customer === @customer %>
<button button type="button" class="btn btn-warning btn-lg btn-block"><%= link_to 'Edit My Account', edit_customer_path(@customer) %></button>

<br>

<button type="button" class="btn btn-danger btn-lg btn-block"><%= link_to 'Delete My Account', customer_path(@customer), method: :delete, data: {confirm: 'Are You Sure You Want To Leave Us? :('} %></button>

<h3>My Posts</h3>
<% if @customer.posts.count > 0 %>
	<% @customer.posts.each do |post| %>
		<h4><%= post.name %></h4>
		<p><%= post.body %></p>
		<% if post.comments.count > 0 %>
		  <%post.comments.each do |comment| %>
			<h6><%= comment.customer.name %></h6>
			<p><%= comment.body %></p>
		  <% end %>
		<% end %>
	<% end %>
<% else %>
	<h4>This customer does not have any posts.</h4>
<% end %>

<% if @customer == current_customer %>
	<hr>
	<h4>Add a new post</h4>
	<%= render 'posts/form' %>
<% end %>

<hr>

<% end %>


</div>
</section>	
